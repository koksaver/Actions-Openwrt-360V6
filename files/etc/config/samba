
config samba
	option workgroup 'WORKGROUP'
	option homes '1'
	option name '网络共享'
	option description '网络共享'
	option autoshare '1'

config sambashare
	option browseable 'yes'
	option name '网络共享'
	option users 'root'
	option read_only 'no'
	option guest_ok 'no'
	option create_mask '0777'
	option dir_mask '0777'
	option path '/mnt/sda5'

